---
import Layout from "@/Layouts/layout.astro";
import { SiteCard } from "@/components/site-card";

type Version = {
  title: string;
  v: string;
};

const versions: Record<string, Version> = {
  v1: { title: "v1", v: "1" },
  v2: { title: "v2", v: "2" },
  v3: { title: "v3", v: "3" },
  v4: { title: "v4", v: "4" },
};
---

<Layout>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {
    Object.keys(versions).map(key => (
      <SiteCard title={versions[key as keyof typeof versions].title} v={versions[key as keyof typeof versions].v} client:only="react" />
    ))
  }
  </div>
</Layout>
